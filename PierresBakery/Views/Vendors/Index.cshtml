<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Bakery</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @using PierresBakery.Models;

    <h1>Pierre's Vendors:</h1>
    <h2><a href='vendors/new'>Add a vendor</a></h2>
    @if (@Model.Count == 0)
    {
      <h2>Currently no vendors have been added.</h2>
    }

    @foreach (Vendor vendor in Model)
    {
      <h2><a href='/vendors/@vendor.Id'>@vendor.Name</a></h2>
    }

    <div>
      <a href='/'>Back to Main Page</a>
    </div>
  </body>
</html>